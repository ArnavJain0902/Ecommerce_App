<%- include("../includes/head.ejs")  %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>


<body>
    <%- include("../includes/navigation.ejs")  %>
    <main>
        <% if(error){ %>
            <div class="error-message"><%= error %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <div class="form-control">
                <label for="title">E-Mail</label>
                <input type="email" name="email" id="email" value="<%= oldInput.email %>" class="<%= validationErrors.find(e=>e.path==='email') ? 'invalid' : '' %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Password</label>
                <input type="password" name="password" id="password" value="<%= oldInput.password %>" class="<%= validationErrors.find(e=>e.path==='password') ? 'invalid' : '' %>">
            </div>
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/reset" style="text-decoration: none;color: rgb(101, 105, 101);">Reset Password</a>
        </div>
    </main>  
<%- include("../includes/end.ejs")  %>